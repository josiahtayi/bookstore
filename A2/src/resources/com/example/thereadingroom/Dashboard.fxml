<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.DashboardController">
    <tabs>
        <!-- Dashboard Tab -->
        <Tab closable="false" text="Dashboard">
            <content>
                <VBox alignment="CENTER" prefHeight="370.0" prefWidth="370.0" spacing="10">
                    <!-- Greeting Message -->
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: #ff4081;" text="Welcome, Josiah!" />

                    <!-- Top 5 Books List -->
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #3f51b5;" text="Top 5 Popular Books" />
                    <ListView fx:id="topBooksListView" prefHeight="150" prefWidth="400" style="-fx-border-color: #3f51b5;" />

                    <!-- Search for Books -->
                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="searchField" prefWidth="200" promptText="Search for books..." />
                        <Button fx:id="searchBtn" onAction="#handleSearchBooks" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Search" />
                    </HBox>

                    <!-- Search Results -->
                    <ListView fx:id="searchResultsListView" prefHeight="150" prefWidth="400" style="-fx-border-color: #3f51b5;" visible="false" />

                    <!-- Orders and Shopping Cart -->
                    <Button style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="View Orders" />
                    <Button fx:id="shoppingCartBtn" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Go to Shopping Cart" />
                    <Button fx:id="logOutBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Log out" />
                </VBox>
            </content>
        </Tab>

        <!-- Account Management Tab -->
        <Tab closable="false" text="Account Management">
            <content>
            <AnchorPane>
               <children>
                       <!-- Edit Profile Fields -->
                       <Label layoutX="147.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #3f51b5;" text="Edit Profile" />
                        <Label layoutX="45.0" layoutY="83.0" text="First Name:" />
                        <TextField fx:id="firstNameField" layoutX="147.0" layoutY="77.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter First Name" />
                        <Label layoutX="45.0" layoutY="123.0" text="Last Name:" />
                        <TextField fx:id="lastNameField" layoutX="147.0" layoutY="117.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Last Name" />
                        <Label layoutX="49.0" layoutY="166.0" text="Password:" />
                        <PasswordField fx:id="passwordField" layoutX="147.0" layoutY="160.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter New Password" />
   
                          <!-- Submit Button -->
                       <Button layoutX="140.0" layoutY="262.4000015258789" onAction="#handleSaveProfile" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Save Changes" />
               </children>
            </AnchorPane>
            </content>
        </Tab>

        <!-- Order Management Tab-->
      <Tab closable="false" text="Order Management">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #3f51b5;">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="228.0" layoutY="14.0" text="Your Orders" textFill="WHITE" />
                  <TableView layoutX="110.0" layoutY="32.0" prefHeight="200.0" prefWidth="300.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Items" />
                      <TableColumn prefWidth="75.0" text="Quantity" />
                        <TableColumn prefWidth="75.0" text="Price" />
                        <TableColumn prefWidth="75.0" text="Date" />
                    </columns>
                  </TableView>
                  <Button layoutX="110.0" layoutY="286.0" mnemonicParsing="false" style="-fx-background-color: #ff4081;" text="Export all Orders" />
                  <Button layoutX="272.0" layoutY="286.0" mnemonicParsing="false" style="-fx-background-color: #ff4081;" text="Export Selected Orders" textAlignment="CENTER" />
                  <BorderPane layoutX="-90.0" layoutY="32.0" prefHeight="200.0" prefWidth="110.0" />
               </children>
            </AnchorPane>
        </content>
      </Tab>
    </tabs>
</TabPane>
