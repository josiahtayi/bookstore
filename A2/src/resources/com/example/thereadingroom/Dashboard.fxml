<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="370.0" prefWidth="370.0" spacing="15" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.DashboardController">

    <!-- Padding around the entire interface -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Greeting Message -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Welcome, Josiah!" />

    <!-- Top 5 Books List -->
    <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Top 5 Popular Books" />
    <ListView fx:id="topBooksListView" prefHeight="120" prefWidth="350" style="-fx-border-color: #ccc;" />

    <!-- Search for Books -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField" prefWidth="250" promptText="Search for books..." style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc;" />
        <Button fx:id="searchBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Search" />
    </HBox>

    <!-- Search Results -->
    <ListView fx:id="searchResultsListView" prefHeight="126.0" prefWidth="330.0" style="-fx-border-color: #ccc;" />

    <!-- Orders and Shopping Cart Section -->
    <HBox alignment="CENTER" spacing="15">
        <Button style="-fx-background-color: #ffca28; -fx-text-fill: black;" text="View Orders" />
        <Button fx:id="shoppingCartBtn" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Go to Shopping Cart" />
        <Button fx:id="logOutBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Log out" />
    </HBox>
</VBox>
