<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <VBox alignment="CENTER" layoutX="10.0" layoutY="14.0" prefHeight="350.0" prefWidth="500.0" spacing="10" AnchorPane.topAnchor="14.0">
           <Label style="-fx-font-size: 18px; -fx-text-fill: #3f51b5;" text="Your Shopping Cart" />
      
                       <!-- Shopping Cart Items -->
           <TableView fx:id="cartTable" prefHeight="400.0" prefWidth="520.0">
               <columns>
                   <TableColumn fx:id="bookTitleColumn" style="-fx-border-color: #3f51b5;" text="Book Title" />
                   <TableColumn fx:id="quantityColumn" text="Quantity" />
                   <TableColumn fx:id="priceColumn" text="Price (AUD)" />
               </columns>
           </TableView>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                  <Button onAction="#handleRemoveBook" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Remove Book" />
                  <Button onAction="#handleUpdateQuantity" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Update Quantity" />
            </children>
         </HBox>
      
                       <!-- Proceed to Checkout -->
           <Button onAction="#handleCheckout" prefWidth="150" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Proceed to Checkout" />
       </VBox>
   </children>
</AnchorPane>
