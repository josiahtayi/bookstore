<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.CartController">
   <children>
       <VBox alignment="CENTER" layoutX="10.0" layoutY="14.0" prefHeight="350.0" prefWidth="500.0" spacing="10" AnchorPane.topAnchor="14.0">
           <Label fx:id="cartLabel" style="-fx-font-size: 18px; -fx-text-fill: #3f51b5;" text="Your Shopping Cart" />
      
                       <!-- Shopping Cart Items -->
           <TableView fx:id="cartTable" prefHeight="400.0" prefWidth="520.0">
               <columns>
                   <TableColumn fx:id="cartTitle" prefWidth="368.0" style="-fx-border-color: #3f51b5;" text="Title" />
                   <TableColumn fx:id="cartPrice" minWidth="0.0" prefWidth="74.4000244140625" text="Price (AUD)" />
               <TableColumn fx:id="cartQty" prefWidth="57.5999755859375" text="Quantity" />
               </columns>
           </TableView>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                  <Button fx:id="removeBook" onAction="#doRemoveBook" style="-fx-background-color: #ff4081;" text="Remove Book" textFill="WHITE" />
                  <Button fx:id="updateBtn" onAction="#doUpdateQuantity" style="-fx-background-color: #3f51b5;" text="Update Quantity" textFill="WHITE" />
            </children>
         </HBox>
      
                       <!-- Proceed to Checkout -->
           <Button fx:id="checkOutBtn" onAction="#handleCheckout" prefWidth="150" style="-fx-background-color: lime;" text="Proceed to Checkout" textFill="WHITE" />
       </VBox>
      <Button fx:id="backBtn" layoutX="10.0" layoutY="364.0" mnemonicParsing="false" onAction="#backBtnOnAction" style="-fx-background-color: red;" text="Back" textFill="WHITE" />
   </children>
</AnchorPane>
