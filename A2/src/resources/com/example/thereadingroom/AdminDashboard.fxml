<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="533.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.thereadingroom.AdminController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
        <!-- Welcome message for the admin user -->
        <Label fx:id="welcomeLabel" alignment="CENTER" style="-fx-font-size: 18px; font-weight: bold;" text="Welcome, Admin!" />

        <!-- Books Inventory -->
        <TableView fx:id="inventoryTable" prefHeight="200" prefWidth="500">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="247.20001220703125" text="Book Title" />
                <TableColumn fx:id="authorColumn" prefWidth="96.79998779296875" text="Author" />
                <TableColumn fx:id="stockColumn" prefWidth="44.0" text="Stock" />
                <TableColumn fx:id="priceColumn" prefWidth="35.20001220703125" text="Price" />
                <TableColumn fx:id="salesColumn" prefWidth="79.20001220703125" text="Sales" />
            </columns>
        </TableView>

        <!-- Stock Management Buttons -->
        <HBox alignment="CENTER" prefHeight="26.0" prefWidth="329.0" spacing="10">
            <Button fx:id="increaseBtn" onAction="#doIncreaseStock" text="Increase Stock" />
            <Button fx:id="decreaseBtn" onAction="#doDecreaseStock" text="Decrease Stock" />
        </HBox>
    </VBox>

     <!-- Logout Button -->
     <Button fx:id="logoutBtn" layoutX="220.0" layoutY="349.0" onAction="#logout" prefWidth="100" text="Log out" />
</AnchorPane>
