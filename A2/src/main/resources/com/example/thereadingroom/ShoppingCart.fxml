<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400" prefWidth="600" stylesheets="@style.css">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <Label text="Your Shopping Cart" style="-fx-font-size: 18px; -fx-text-fill: #3f51b5;" />

        <!-- Shopping Cart Items -->
        <TableView fx:id="cartTable" prefHeight="200" prefWidth="500">
            <columns>
                <TableColumn fx:id="bookTitleColumn" text="Book Title" style="-fx-border-color: #3f51b5;"/>
                <TableColumn fx:id="quantityColumn" text="Quantity"/>
                <TableColumn fx:id="priceColumn" text="Price (AUD)"/>
            </columns>
        </TableView>

        <!-- Update Cart Buttons -->
        <HBox spacing="10">
            <Button text="Remove Book" onAction="#handleRemoveBook" style="-fx-background-color: #ff4081; -fx-text-fill: white;"/>
            <Button text="Update Quantity" onAction="#handleUpdateQuantity" style="-fx-background-color: #3f51b5; -fx-text-fill: white;"/>
        </HBox>

        <!-- Proceed to Checkout -->
        <Button text="Proceed to Checkout" onAction="#handleCheckout" prefWidth="150" style="-fx-background-color: #ff4081; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
