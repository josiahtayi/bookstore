<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="520.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.DashboardController">

    <!-- Padding around the entire interface -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Greeting Message -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Welcome" />

    <!-- Top 5 Books List -->
    <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Top 5 Popular Books" />
   <TableView fx:id="top5table" prefHeight="89.0" prefWidth="434.0">
     <columns>
       <TableColumn prefWidth="75.0" text="Title" />
       <TableColumn prefWidth="75.0" text="Author" />
         <TableColumn prefWidth="75.0" text="Price" />
         <TableColumn prefWidth="75.0" text="Sales" />
     </columns>
   </TableView>

    <!-- Search for Books -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField" prefWidth="250" promptText="Search for books..." style="-fx-background-color: #f9f9f9; -fx-border-color: #ccc;" />
        <Button fx:id="searchBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Search" />
    </HBox>

    <!-- Search Results -->
    <ListView fx:id="searchResultsListView" prefHeight="126.0" prefWidth="330.0" style="-fx-border-color: #ccc;" />

    <!-- Orders and Shopping Cart Section -->
    <HBox alignment="CENTER" spacing="15">
        <Button style="-fx-background-color: #ffca28; -fx-text-fill: black;" text="View Orders" />
        <Button fx:id="shoppingCartBtn" onAction="#shoppingCartBtnOnAction" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Go to Shopping Cart" />
        <Button fx:id="logOutBtn" onAction="#logOutBtnOnAction" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Log out" />
    </HBox>
</VBox>
