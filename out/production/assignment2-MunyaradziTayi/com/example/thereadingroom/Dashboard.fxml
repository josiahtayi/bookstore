<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="370.0" prefWidth="370.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.DashboardController">
    <!-- Greeting Message -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: #ff4081;" text="Welcome, Josiah!" />

    <!-- Top 5 Books List -->
    <Label style="-fx-font-size: 16px; -fx-text-fill: #3f51b5;" text="Top 5 Popular Books" />
    <ListView fx:id="topBooksListView" prefHeight="150" prefWidth="400" style="-fx-border-color: #3f51b5;" />

    <!-- Search for Books -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="searchField" prefWidth="200" promptText="Search for books..." />
        <Button fx:id="searchBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Search" />
    </HBox>

    <!-- Search Results -->
    <ListView fx:id="searchResultsListView" prefHeight="150" prefWidth="400" style="-fx-border-color: #3f51b5;" visible="false" />

    <!-- Orders and Shopping Cart -->
    <Button style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="View Orders" />
    <Button fx:id="shoppingCartBtn" style="-fx-background-color: #ff4081; -fx-text-fill: white;" text="Go to Shopping Cart" />
    <Button fx:id="logOutBtn" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Log out" />
</VBox>
