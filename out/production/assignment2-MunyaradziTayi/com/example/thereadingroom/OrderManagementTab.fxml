<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="showProfile" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #3f51b5;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.thereadingroom.OrderController">
    <children>
        <Label fx:id="orderNameLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="228.0" layoutY="14.0" text="Your Orders" textFill="WHITE" />
        <TableView fx:id="ordersTable" layoutX="110.0" layoutY="32.0" prefHeight="200.0" prefWidth="300.0">
            <columns>
                <TableColumn fx:id="descColumn" prefWidth="75.0" text="Description" />
                <TableColumn fx:id="orderNum" prefWidth="75.0" text="Order Number" />
                <TableColumn fx:id="totalColumn" prefWidth="75.0" text="Total" />
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
            </columns>
        </TableView>
        <Button fx:id="exportAllBtn" layoutX="110.0" layoutY="286.0" mnemonicParsing="false" onAction="#exportAll" style="-fx-background-color: #ff4081;" text="Export all Orders" />
        <Button fx:id="exportSelBtn" layoutX="272.0" layoutY="286.0" mnemonicParsing="false" onAction="#exportSelected" style="-fx-background-color: #ff4081;" text="Export Selected Orders" textAlignment="CENTER" />
      <Button fx:id="backBtn" layoutX="21.0" layoutY="286.0" mnemonicParsing="false" onAction="#backToDashboard" text="Back" />
    </children>
</AnchorPane>
