<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="theReadingRoom.ProfileController">
    <children>
        <!-- Edit Profile Fields -->
        <Label fx:id="heading" layoutX="147.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-text-fill: #3f51b5;" text="Edit Profile" />
        <Label fx:id="profileFName" layoutX="45.0" layoutY="83.0" text="First Name:" />
        <TextField fx:id="profileFNameTF" layoutX="147.0" layoutY="77.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter First Name" />
        <Label fx:id="profileLName" layoutX="45.0" layoutY="123.0" text="Last Name:" />
        <TextField fx:id="profileLNameTF" layoutX="147.0" layoutY="117.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Last Name" />
        <Label fx:id="profilePassword" layoutX="49.0" layoutY="166.0" text="Password:" />
        <PasswordField fx:id="profilePasswordTF" layoutX="147.0" layoutY="160.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter New Password" />

        <!-- Submit Button -->
        <Button fx:id="profileSave" layoutX="140.0" layoutY="262.4000015258789" onAction="#saveChanges" style="-fx-background-color: #3f51b5; -fx-text-fill: white;" text="Save Changes" />
      <Button fx:id="back" layoutX="23.0" layoutY="262.0" mnemonicParsing="false" onAction="#backToDashboard" text="Back" />
      <Label fx:id="usernameLbl" layoutX="210.0" layoutY="40.0" text="Label" />
      <Button fx:id="profileCancel" layoutX="300.0" layoutY="263.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
    </children>
</AnchorPane>
