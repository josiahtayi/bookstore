<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="theReadingRoom.CartController">
   <children>
         <Button fx:id="increaseQty" layoutX="273.0" layoutY="272.0" onAction="#increaseQuantityBtn" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: #3f51b5;" text="Increase Quantity +" textFill="WHITE" />
      <Button fx:id="decreaseQty" layoutX="117.0" layoutY="272.0" onAction="#decreaseQuantityBtn" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: #3f51b5;" text="Decrease Quantity -" textFill="WHITE" />
         <Button fx:id="removeBook" layoutX="195.0" layoutY="313.0" onAction="#doRemoveBook" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: #ff4081;" text="Remove Book" textFill="WHITE" />
   
                       <!-- Proceed to Checkout -->
        <Button fx:id="checkOutBtn" layoutX="195.0" layoutY="352.0" onAction="#goToCheckout" prefHeight="25.0" prefWidth="130.0" style="-fx-background-color: lime;" text="Proceed to Checkout" textFill="WHITE" />
        <Label fx:id="cartLabel" layoutX="182.0" layoutY="14.0" style="-fx-font-size: 18px; -fx-text-fill: #3f51b5;" text="Your Shopping Cart" />
   
                       <!-- Shopping Cart Items -->
        <TableView fx:id="cartTable" layoutX="10.0" layoutY="51.0" prefHeight="192.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="cartTitle" prefWidth="368.0" style="-fx-border-color: #3f51b5;" text="Title" />
                <TableColumn fx:id="cartPrice" minWidth="0.0" prefWidth="74.4000244140625" text="Price (AUD)" />
                <TableColumn fx:id="cartQty" prefWidth="57.5999755859375" text="Quantity" />
            </columns>
        </TableView>
      <Button fx:id="backBtn" layoutX="10.0" layoutY="352.0" mnemonicParsing="false" onAction="#backToDashboard" style="-fx-background-color: red;" text="Back" textFill="WHITE" />
      <Label fx:id="cartTotal" layoutX="389.0" layoutY="243.0" text="Total:" />
   </children>
</AnchorPane>
